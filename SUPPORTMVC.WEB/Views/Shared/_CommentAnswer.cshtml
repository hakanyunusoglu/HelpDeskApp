@using SUPPORTMVC.ENTITIES.DBT
@model RequestComments

<form>
    <div class="form-group m-form__group row">
        <label class="col-lg-2 col-form-label m--font-bolder">Mesaj Detayı:</label>
        <br />
        <div class="col-lg-10">
            <textarea class="form-control m--font-boldest2" id="m_autosize_1" rows="4" readonly="readonly">@Model.CommentText</textarea>
        </div>
    </div>
    <div class="form-group m-form__group row">
        <div class="col-lg-12">
            <hr />
            <h5 class="modal-title m--margin-left-10" id="exampleModalClose">Cevap Yaz</h5>
            <hr />
        </div>
    </div>
    <div class="form-group m-form__group row">
        <label class="col-lg-2 col-form-label m--font-bolder"> Cevap Ekle:</label>
        @*<div class="col-lg-9 col-md-9 col-sm-12">
            <textarea class="summernote input-block-level" id="m_summernote_1"></textarea>
        </div>*@
        <div class="col-md-10">
            <textarea class="form-control m--font-boldest2" id="m_autosize_1_kapat" rows="6"></textarea>
        </div>
    </div>
    <hr />
    @Html.HiddenFor(x => Model.CommentID)
    <div class="form-group m-form__group row float-right m--margin-right-65 m--margin-top-5" style="margin-bottom: -1%">
        <button type="button" id="CommentAnswerButton" class="btn btn-info m--font-boldest" style="width: 10rem" onclick="CommentAnswer(this,'CommentAnswer');"> Cevapla </button>
    </div>
</form>

<script src="~/Content/assets/demo/demo12/custom/crud/forms/widgets/autosize.js" type="text/javascript"></script>
<script src="~/Content/assets/demo/demo12/custom/crud/forms/widgets/summernote.js"></script>
