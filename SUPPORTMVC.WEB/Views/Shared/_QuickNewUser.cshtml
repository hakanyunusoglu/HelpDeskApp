@using SUPPORTMVC.BLL
@using SUPPORTMVC.ENTITIES.DBTO
@model UserAddModel
<script>
    function sifremigoster() {
        var element = document.getElementById('Password');
        element.type = (element.type == 'password' ? 'text' : 'password');
    }
</script>
<form>
    <div class="form-group m-form__group row" style="margin-top: -1rem">
        <div class="col-md-12">
            <span class="m-form__help m--font-danger" style="font-size: 1.1rem"> <b>1</b>: Standart Kullanıcı, &nbsp; <b>2</b>: Firma Yetkilisi,&nbsp; <b>3</b>: HBS Kullanıcı, &nbsp; <b>4</b>: HBS Yetkilisi</span>
        </div>
    </div>
    <hr />
    <div class="form-group m-form__group row">
        <label class="col-lg-2 col-form-label m--font-bolder"> Kullanıcı Adı:</label>
        <div class="col-md-3">
            <input type="text" class="form-control m-input m--font-boldest2" id="Username" />
        </div>
        <label class="col-lg-1 col-form-label m--font-bolder"> Şifre:</label>
        <div class="col-md-4">
            <div class="input-group">
                <input type="password" class="form-control m-input m--font-boldest2" id="Password" name="Password" />
                <div class="input-group-prepend" id="profilsifregoster" onclick="sifremigoster()"><span class="input-group-text"><i class="la la-eye"></i></span></div>
            </div>
        </div>
    </div>
    <div class="form-group m-form__group row">
        <label class="col-lg-2 col-form-label m--font-bolder"> Adı:</label>
        <div class="col-md-3">
            <input type="text" class="form-control m-input m--font-boldest2" id="UName" />
        </div>
        <label class="col-lg-1 col-form-label m--font-bolder"> Soyadı:</label>
        <div class="col-md-4">
            <input type="text" class="form-control m-input m--font-boldest2" id="USurname" />
        </div>
    </div>
    <div class="form-group m-form__group row">
        <label class="col-lg-2 col-form-label m--font-bolder"> E-Mail:</label>
        <div class="col-md-8">
            <input type="text" class="form-control m-input m--font-boldest2" id="Email" />
        </div>
    </div>
    <div class="form-group m-form__group row">
        <label class="col-lg-2 col-form-label m--font-bolder"> Firma:</label>
        <div class="col-md-8">
            <select class="form-control m-select2 m--font-boldest2" id="m_select2_2">
                <option value="0" selected disabled hidden>Firma seçiniz</option>
            </select>
        </div>
    </div>
    <div class="form-group m-form__group row">
        <label class="col-lg-2 col-form-label m--font-bolder"> Kullanıcı Rolü:</label>
        <div class="col-md-2">
            <input type="text" class="form-control m-input m--font-boldest2" id="RoleID" />
        </div>
        <label class="col-lg-2 col-form-label m--font-bolder"> Aktif:</label>
        <div class="col-md-2">
            <span class="m-switch m-switch--lg m-switch--icon">
                <label>
                    <input type="checkbox" class="form-control m-input m--font-boldest2" id="IsActive" checked />
                    <span></span>
                </label>
            </span>
        </div>
    </div>
    <hr />
    <div class="form-group m-form__group row float-right m--margin-right-65 m--margin-top-5" style="margin-bottom: -1%">
        <button type="button" id="userEditButton" class="btn btn-info m--font-boldest" style="width: 10rem" onclick="QuickNewUser(this,'quickuser');"> Oluştur </button>
    </div>
</form>

<script src="~/Content/assets/demo/demo12/custom/crud/forms/widgets/select2.js" type="text/javascript"></script>
<script src="~/TODO_JS/RequestCompanyFilter.js"></script>